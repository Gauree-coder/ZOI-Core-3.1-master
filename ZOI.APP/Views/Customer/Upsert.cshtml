@model ZOI.BAL.Models.Customer


<h1 class="text-info"> @(Model.Id != 0 ? "Edit" : "Create") Customer  </h1>
<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
            <Input hidden asp-for="Id" class="form-control" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <Input hidden asp-for="TypeID" value="2" class="form-control" />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LoginName">Login Name</label>
            </div>
            <div class="col-6">
                <Input asp-for="LoginName" class="form-control" />
            </div>
            <span asp-validation-for="LoginName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Password"></label>
            </div>
            <div class="col-6">
                <Input type="password" asp-for="Password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ConfirmPassword">Confirm Password</label>
            </div>
            <div class="col-6">
                <Input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CustomerName"></label>
            </div>
            <div class="col-6">
                <Input asp-for="CustomerName" class="form-control" />
            </div>
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CustomerEmail">Customer Email</label>
            </div>
            <div class="col-6">
                <Input asp-for="CustomerEmail" class="form-control" />
            </div>
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CustomerMobileNo"></label>
            </div>
            <div class="col-6">
                <Input asp-for="CustomerMobileNo" class="form-control" />
            </div>
            <span asp-validation-for="CustomerMobileNo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Address1">Address</label>
            </div>
            <div class="col-6">
                <Input asp-for="Address1" class="form-control" />
                <Input asp-for="Address2" class="form-control" />
                <Input asp-for="Address3" class="form-control" />
            </div>
            <span asp-validation-for="Address1" class="text-danger"></span>
            <span asp-validation-for="Address2" class="text-danger"></span>
            <span asp-validation-for="Address3" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="City"></label>
            </div>
            <div class="col-6">
                <Input asp-for="City" class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Pin"></label>
            </div>
            <div class="col-6">
                <Input asp-for="Pin" class="form-control" />

            </div>
            <span asp-validation-for="Pin" class="text-danger"></span>
            <div>
                <Input hidden asp-for="PaymentTerms" class="form-control" value="Cash" />
                <Input hidden asp-for="IsMobileVerified" class="form-control" value="false" />
                <Input hidden asp-for="IsEmailVerified" class="form-control" value="false" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-3">
                <button type="submit" class="btn-primary form-control">
                    @(Model.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="ListCustomers" class="btn-primary form-control">Back to List </a>
            </div>


        </div>
    </form>

</div>

@section scripts{

 <Partial  name="_ValidationScriptsPartial.cshtml" />

}
